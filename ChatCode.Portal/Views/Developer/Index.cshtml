@model Tuple<List<ChatCode.DAL.Entities.Tables.Website>, ChatCode.Portal.BL.CO.StatisticCO> 
@{
    ViewBag.Title = "ChatCode - Developer";
}

<!-- DataTables -->
<link href="~/Contents/css/table/dataTables.bootstrap.css" rel="stylesheet" />
<!-- Theme style -->
<link href="~/Contents/css/table/AdminLTE.min.css" rel="stylesheet" />
<!-- AdminLTE Skins. Choose a skin from the css/skins
     folder instead of downloading all of them to reduce the load. -->
<link href="~/Contents/css/table/_all-skins.min.css" rel="stylesheet" />

<script src="~/Contents/scripts/jquery-2.2.3.min.js"></script> 
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@Model.Item2.AddedToday</h3>
                <p>ChatCode Added Today</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@Model.Item2.TotalTemplate<sup style="font-size: 20px"></sup></h3>
                <p>ChatCode Total Template</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@Model.Item2.YourTemplate</h3>
                <p>Your Template</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3>0@*@Model.Item2.YourDownloadedTemplate*@</h3>
                <p>Your Downloaded Template</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Data Table With Full Features</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    
                    <th>Template Name</th>
                    <th>Category</th>
                    <th>Number of Download</th>
                    <th>Added Date</th>
                    <th>Star</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Item1)
                {
                 <tr>
                        <td><a href="/Developer/UpdateTemplate/@item.Id">@item.TemplateName</a></td>
                        <td>@item.Types</td>
                        <td>@item.NumberOfDownload</td>
                        <td>@item.PublishedDate</td>
                        <td>@item.Rating</td>
                    </tr>
                }
                
                
              
            </tbody>
            @*<tfoot>
                <tr>
                    <th>Template Name</th>
                    <th>Category</th>
                    <th>Number of Download</th>
                    <th>Added Date</th>
                    <th>Star</th>
                </tr>
            </tfoot>*@
        </table>
    </div>
    <!-- /.box-body -->
</div> 

<script src="~/Contents/scripts/jquery-2.2.3.min.js"></script> 
<!-- DataTables -->
<script src="~/Contents/scripts/table/jquery.dataTables.min.js"></script>
<script src="~/Contents/scripts/table/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/Contents/scripts/table/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="~/Contents/scripts/table/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="~/Contents/scripts/app.min.js"></script>
<!-- page script -->
<script src="~/Contents/scripts/table/demo.js"></script>
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
